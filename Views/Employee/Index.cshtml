@model IEnumerable<Template.BL.Models.EmployeeVM>

@{
    ViewData["Title"] = "Index";
}

<link href="~/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
<link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />

<h2>Employee</h2>

<a asp-controller="Employee" asp-action="create" class="btn btn-primary">Create New Employee</a>


<br />
<form asp-action="index" asp-controller="Employee" class="form-group">
<input type="text" placeholder="Search" name="searchValue" class="form-control" />
<input type="submit" value="Search" class="btn btn-primary btn-block"
</form>
<br />
<table class="table table-hover table-bordered table-striped text-center "> 


    <thead>
        <tr class="table-dark">
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>

        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Department.Name</td>
                <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>
                <td><a asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a></td>
                <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>



            </tr>

        }
    </tbody>
</table>


















