@model IEnumerable<Template.BL.Models.departmentVM>

@{
    ViewData["Title"] = "Index";
}

<link href="~/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
<link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />

<h2>Department</h2>
 
<a asp-controller="department" asp-action="create" class="btn btn-primary">create new department</a>




<table class="table table-hover table-bordered table-striped text-center ">


    <thead>
        <tr class="table-dark">
            <th>ID</th>
            <th>Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a asp-controller="department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>
                <td><a asp-controller="department" asp-action="Update"  asp-route-id="@item.Id" class="btn btn-warning">Update</a></td>
                <td><a asp-controller="department" asp-action="Delete"  asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                

            </tr>

        }
    </tbody>
</table>































